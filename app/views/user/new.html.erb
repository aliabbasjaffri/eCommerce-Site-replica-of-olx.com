<% @page_title = "User" %>

<div class="User new">
  <h2>Create User</h2>

  <%= form_for(:user, :url => {:action => 'create'}) do |f| %>

    <table summary="User form fields">
      <tr>
        <th>First Name</th>
        <td><%= f.text_field(:firstName) %></td>
      </tr>
      <tr>
        <th>Last Name</th>
        <td><%= f.text_field(:lastName) %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= f.text_field(:email) %></td>
      </tr>
      <tr>
        <th>Password</th>
        <td><%= f.password_field(:password) %></td>
      </tr>
      <tr>
        <th>Location</th>
        <td><%= f.text_field(:location) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= submit_tag("Create User") %>
    </div>

  <% end %>
</div>
